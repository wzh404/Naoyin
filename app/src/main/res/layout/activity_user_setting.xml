<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/msg_invite_no_result"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_title">

        <TextView
            android:id="@+id/balance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="更多设置"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/show_mytrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:padding="4dp"
            android:src="@drawable/back"
            android:clickable="true"
            android:onClick="exitOnClick"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_my_account"
        android:layout_width="fill_parent"
        android:layout_height="47.329987dip"
        android:layout_marginTop="19.329987dip"
        android:background="@color/white"
        android:clickable="true"
        android:paddingLeft="13.329987dip"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="我的帐号"
            android:textColor="@color/lagou_user_txt"
            android:textSize="16.0sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.33000004dip"
            android:layout_alignParentBottom="true"
            android:background="@color/lagou_user_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_setpush"
        android:layout_width="fill_parent"
        android:layout_height="47.329987dip"
        android:layout_marginTop="19.329987dip"
        android:background="@color/white"
        android:clickable="true"
        android:paddingLeft="13.329987dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="常见问题"
            android:textColor="@color/lagou_user_txt"
            android:textSize="16.0sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.33000004dip"
            android:layout_alignParentBottom="true"
            android:background="@color/lagou_user_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_cleardata"
        android:layout_width="fill_parent"
        android:layout_height="47.329987dip"
        android:background="@color/white"
        android:clickable="true"
        android:paddingLeft="13.329987dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="版本更新"
            android:textColor="@color/lagou_user_txt"
            android:textSize="16.0sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.33000004dip"
            android:layout_alignParentBottom="true"
            android:background="@color/lagou_user_line"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_aboutlagou"
        android:layout_width="fill_parent"
        android:layout_height="47.329987dip"
        android:layout_marginTop="19.329987dip"
        android:background="@color/white"
        android:clickable="true"
        android:paddingLeft="13.329987dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="关于盈达"
            android:textColor="@color/lagou_user_txt"
            android:textSize="16.0sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.33000004dip"
            android:layout_alignParentBottom="true"
            android:background="@color/lagou_user_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_userprotocol"
        android:layout_width="fill_parent"
        android:layout_height="47.329987dip"
        android:background="@color/white"
        android:clickable="true"
        android:paddingLeft="13.329987dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="用户协议"
            android:textColor="@color/lagou_user_txt"
            android:textSize="16.0sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.33000004dip"
            android:layout_alignParentBottom="true"
            android:background="@color/lagou_user_line"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_logout"
        android:layout_width="fill_parent"
        android:layout_height="47.329987dip"
        android:layout_marginTop="19.329987dip"
        android:background="@drawable/layout_selector"
        android:clickable="true"
        android:onClick="logoutOnClick"
        android:paddingLeft="14dp">

        <TextView
            android:id="@+id/log_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="退出帐号"
            android:textColor="@color/lagou_user_setting_btn"
            android:textSize="16.0sp" />
    </RelativeLayout>
</LinearLayout>