<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="article"
            type="com.xeehoo.health.common.bean.Article" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:orientation="vertical"
        android:paddingBottom="0dip"
        android:paddingLeft="0dip"
        android:paddingRight="0dip"
        android:paddingTop="10dip">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/white"
            android:clickable="true">

            <TextView
                android:id="@+id/item_user"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_user_location"
                android:text='张三'
                android:textColor="#999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_train_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:text="8分钟前"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/white"
            android:clickable="true">

            <ImageView
                android:id="@+id/lv_article_image"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:background="#000"
                android:scaleType="fitXY"
                app:imageUrl="@{article.image}"  />

            <TextView
                android:id="@+id/item_article_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="10dp"
                android:layout_below="@id/lv_article_image"
                android:text = "完成"
                android:textColor="#999"
                />
            <TextView
                android:id="@+id/item_article_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_article_status"
                android:layout_alignBottom="@id/item_article_status"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@{article.title}"
                android:textColor="@color/orange"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_article_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="#999"
                android:layout_toRightOf="@id/item_article_title"
                android:layout_alignBottom="@id/item_article_status"
                android:text = "第3天"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/white"
            android:clickable="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:background="@color/background_dark"></View>

            <TextView
                android:id="@+id/item_article_like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:text='@{"likes " + String.valueOf(article.likes)}'
                android:textColor="#999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_article_comments"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:text='@{"views " + String.valueOf(article.views)}'
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</layout>