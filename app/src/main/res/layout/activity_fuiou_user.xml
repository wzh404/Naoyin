<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="第三方托管账户"
            android:textColor="#fff"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/show_mytrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:padding="4dp"
            android:src="@drawable/back"
            android:clickable="true"
            android:onClick="exitOnClick"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:clickable="true"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="用户姓名"
            android:textColor="@color/lagou_user_txt"
            android:textSize="16.0sp" />
        <TextView
            android:id="@+id/fuiou_user_name"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="16.0sp"
            android:layout_marginRight="16dp"
            android:text="王尊会" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.33000004dip"
            android:layout_alignParentBottom="true"
            android:background="@color/lagou_user_line" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:clickable="true"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="第三方账户"
            android:textColor="@color/lagou_user_txt"
            android:textSize="16.0sp" />
        <TextView
            android:id="@+id/fuiou_user_mobile"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="16.0sp"
            android:layout_marginRight="16dp"
            android:text="13811300303" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.33000004dip"
            android:layout_alignParentBottom="true"
            android:background="@color/lagou_user_line" />
    </RelativeLayout>

    <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:background="@color/white"
    android:clickable="true"
    android:paddingLeft="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="账户余额"
        android:textColor="@color/lagou_user_txt"
        android:textSize="16.0sp" />
    <TextView
        android:id="@+id/fuiou_user_ct"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:textSize="16.0sp"
        android:layout_marginRight="16dp"
        android:text="￥1,000,000" />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.33000004dip"
        android:layout_alignParentBottom="true"
        android:background="@color/lagou_user_line" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:clickable="true"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="可用余额"
            android:textColor="@color/lagou_user_txt"
            android:textSize="16.0sp" />
        <TextView
            android:id="@+id/fuiou_user_ca"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="16.0sp"
            android:layout_marginRight="16dp"
            android:text="￥1,000,000" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.33000004dip"
            android:layout_alignParentBottom="true"
            android:background="@color/lagou_user_line" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:clickable="true"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="冻结金额"
            android:textColor="@color/lagou_user_txt"
            android:textSize="16.0sp" />
        <TextView
            android:id="@+id/fuiou_user_cf"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="16.0sp"
            android:layout_marginRight="16dp"
            android:text="￥1,000,000" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.33000004dip"
            android:layout_alignParentBottom="true"
            android:background="@color/lagou_user_line" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:clickable="true"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="未结金额"
            android:textColor="@color/lagou_user_txt"
            android:textSize="16.0sp" />
        <TextView
            android:id="@+id/fuiou_user_cu"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textSize="16.0sp"
            android:layout_marginRight="16dp"
            android:text="￥1,000,000" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.33000004dip"
            android:layout_alignParentBottom="true"
            android:background="@color/lagou_user_line" />
    </RelativeLayout>

    <LinearLayout
        android:id = "@+id/fuiou_user_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0.1"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_red_corner_shape"
            android:text="还没有托管账户，请点击注册"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="fuiouUserOnClick"/>
    </LinearLayout>

    <LinearLayout
        android:id = "@+id/fuiou_user_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0.1"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/button_red_corner_shape"
            android:text="提现"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="withdrawOnClick"/>
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_blue_corner_shape"
            android:text="充值"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:clickable="true"
            android:onClick="rechargeOnClick"/>
    </LinearLayout>
</LinearLayout>