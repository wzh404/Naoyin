<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="obj"
            type="com.alibaba.fastjson.JSONObject" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/my_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/alzheimer_red">

            <TextView
                android:id="@+id/watcher_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:text="我的信息"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_v1_layout_root"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            android:layout_below="@id/my_title"
            android:clickable="true"
            android:paddingTop="15dip">

            <ImageView
                android:id="@+id/item_v1_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/bike" />

            <TextView
                android:id="@+id/item_my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/item_v1_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/item_v1_icon"
                android:gravity="center_vertical"
                android:text="王小奇"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_my_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/item_my_name"
                android:layout_below="@id/item_my_name"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:text="北京-海淀"
                android:textColor="#999"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/item_v1_more"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/arrow_right_normal" />
        </RelativeLayout>

        <Button
            android:id="@+id/button_first"
            android:layout_height="48dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentBottom="true"
            android:text="退出登录"
            android:textColor="@color/white"
            android:background="@drawable/button_exit_shape"
            android:layout_marginBottom="20dp"
            >
        </Button>
    </RelativeLayout>

</layout>