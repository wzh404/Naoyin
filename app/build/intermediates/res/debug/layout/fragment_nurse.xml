<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <ListView
        android:id="@+id/lv_nurse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null" 
        android:layout_weight="1"/> 
  
    <LinearLayout
        style="@android:style/ButtonBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="@color/white">

        <Button
            android:id="@+id/button_plan"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="每日计划"
            android:background="@color/white"
            android:clickable="true"
            android:textSize="12sp"
            android:drawableTop="@drawable/ic_loading"/>

        <Button
            android:id="@+id/button_risk"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="风险预防"
            android:clickable="true"
            android:background="@color/white"
            android:textSize="12sp"
            android:drawableTop="@drawable/ic_loading"/>

        <Button
            android:id="@+id/button_diagnosis"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="早期诊断"
            android:clickable="true"
            android:background="@color/white"
            android:textSize="12sp"
            android:drawableTop="@drawable/ic_loading"/>
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/StudioProjects/ViewPagerDemo/app/src/main/res/layout/fragment_nurse.xml -->